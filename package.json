{
  "name": "youtube-audio-player",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/components",
      "packages/core",
      "packages/mobile",
      "packages/web"
    ]
  },
  "scripts": {
    "components:start": "yarn workspace @youtube-audio-player/components start",
    "components:build": "yarn workspace @youtube-audio-player/components build",
    "web:run": "yarn workspace @youtube-audio-player/web start",
    "web:start": "./node_modules/.bin/concurrently --kill-others \"yarn components:start\" \"yarn web:run\"",
    "web:build": "yarn yarn workspace @youtube-audio-player/web build",
    "mobile:android:run": "yarn workspace @youtube-audio-player/mobile android:run",
    "mobile:android:start": "./node_modules/.bin/concurrently --kill-others \"yarn components:start\" \"yarn mobile:android:run\"",
    "clean:all": "sudo rm -rf node_modules packages/*/node_modules",
    "clean:log": "rm **/*/*.log"
  },
  "devDependencies": {
    "concurrently": "^4.1.0"
  }
}
