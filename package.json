{
  "name": "youtube-audio-player",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/components",
      "packages/core",
      "packages/mobile",
      "packages/web"
    ]
  },
  "scripts": {
    "web:start": "yarn workspace @youtube-audio-player/web start",
    "web:build": "yarn yarn workspace @youtube-audio-player/web build",
    "mobile:android:run": "yarn workspace @youtube-audio-player/mobile android:run",
    "clean:all": "sudo rm -rf node_modules packages/*/node_modules",
    "clean:log": "rm **/*/*.log",
    "flow": "./node_modules/.bin/flow"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "flowtype"
    ]
  },
  "devDependencies": {
    "babel-preset-flow": "^6.23.0",
    "concurrently": "^4.1.0",
    "eslint-plugin-flowtype": "^3.2.1",
    "flow-bin": "^0.91.0"
  }
}
